<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="#151E32"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="2dp"
    app:strokeColor="#00E5FF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgAvion"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtRareza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEGENDARY"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:background="@drawable/bg_rarity_badge"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/txtModelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo AviÃ³n"
                android:textColor="#E0E0E0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txtFabricante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fabricante"
                android:textColor="#90A4AE"
                android:textSize="12sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>